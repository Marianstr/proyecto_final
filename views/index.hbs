<div class="container-fluid">
  <div id="contact" class="row">
    <h2>Contact</h2>
    <div class="col-md-4">
      {{!<h2>Location</h2>}}
      <div class="mapa">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6075.269495067315!2d-3.709148356758532!3d40.4169416041457!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd42287e1463b6cf%3A0x14a34120b9332d61!2sSol%2C%20Centro%2C%20Madrid!5e0!3m2!1ses!2ses!4v1716663435038!5m2!1ses!2ses"
        >
        </iframe>"
      </div>
    </div>

    <div class="col-md-4">
      <form class="row g-4" action="/" method="post">
        <div class="col-md-6">
          <label for="name">Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            placeholder="Enter your name"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="phone">Phone</label>
          <input
            type="phone"
            class="form-control"
            name="phone"
            placeholder="Enter your phone"
            required
          />
        </div>
        <div class="col-12">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="Enter your email"
            required
          />
        </div>
        <div class="col-12">
          <label for="message">Message</label>
          <textarea
            class="form-control"
            name="message"
            rows="5"
            placeholder="Enter your message"
            required
          ></textarea>
        </div>
        <button type="submit" class="btn">Submit</button>
      </form>
      <p>{{message}}</p>
    </div>
  </div>

</div>