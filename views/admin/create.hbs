<div class="container" style="margin: 100px;">
  <div class="row">

    <div class="col-6 offset-3">
      <h2 class="text-center">Agregar nuevo precio</h2>

      <form action="/admin/photos/create" method="post">
        <div class="form-group mb-3">
          <label for="name">Nombre:</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="form-control"
          />
        </div>

        <div class="form-group mb-3">
          <label for="dimension">Dimensi√≥n:</label>
          <input
            type="text"
            id="dimension"
            name="dimension"
            required
            class="form-control"
          />
        </div>

        <div class="form-group mb-3">
          <label for="name">Precio:</label>
          <input
            type="text"
            id="price"
            name="price"
            required
            class="form-control"
          />
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>

      </form>
      {{#if error}}
        <p>{{message}}</p>
      {{/if}}

    </div>
  </div>
</div>